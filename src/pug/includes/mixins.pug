mixin image(path, alt, classes)
	picture
		source(srcset=`${path}@1x.webp, ${path}@2x.webp 2x, ${path}@3x.webp 3x`, type="image/webp")
		source(srcset=`${path}@1x.png, ${path}@2x.png 2x, ${path}@3x.png 3x`, type="image/png")
		img(src=`${path}@1x.jpg`, srcset=`${path}@2x.jpg 2x, ${path}@3x.jpg 3x`, alt=alt, class=classes)
