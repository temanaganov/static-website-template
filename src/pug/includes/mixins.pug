mixin image(path, alt, width, height, classes)
	picture
		source(srcset=`${path}.avif, ${path}@2x.avif 2x, ${path}@3x.avif 3x`, type="image/avif")
		source(srcset=`${path}.webp, ${path}@2x.webp 2x, ${path}@3x.webp 3x`, type="image/webp")
		source(srcset=`${path}.png, ${path}@2x.png 2x, ${path}@3x.png 3x`, type="image/png")
		img(
			src=`${path}.jpg`,
			srcset=`${path}@2x.jpg 2x, ${path}@3x.jpg 3x`,
			alt=alt,
			width=width,
			height=height,
			class=classes
		)
